REM 更新対象の情報
SET INFOSCRIPT=%~DP0..\cmd\%~N0.DB2


SET INFILENAME=
SET MSG=%DATE% %TIME% 全店特売（アンケート有）_基本 INATK.TOKTG_KHN UPDATE処理
ECHO %MSG%
>> %OUTFILE% ECHO %MSG%
"%MYSQLPATH%mysql" %OPTION% -h %HOST% %DB_NAME% -u %USER_ID% --show-warnings -vv -e "UPDATE INATK.TOKTG_KHN AS T1, (SELECT * FROM INATK2.TOKTG_KHN WHERE SENDFLG = 9) AS T2 SET T1.JLSTCREFLG = T2.JLSTCREFLG WHERE T1.MOYSKBN = T2.MOYSKBN AND T1.MOYSSTDT = T2.MOYSSTDT AND T1.MOYSRBAN = T2.MOYSRBAN; commit;" >>%OUTFILE% 2>&1
