REM [026][069_LOAD]
@ECHO OFF

REM ログフォルダ作成
IF NOT EXIST %~DP0..\logs MKDIR %~DP0..\logs

REM コマンドフォルダ作成
IF NOT EXIST %~DP0..\cmd MKDIR %~DP0..\cmd

REM ログファイルの情報
SET OUTFILE=%~DP0../logs/setup.log
SET OUTTIME=%~DP0../logs/time.log

REM ベースフォルダ
SET BASEDIR=%~DP0..

REM 更新対象の情報
SET INFOSCRIPT=%~DP0..\cmd\%~N0.DB2


SET INFILENAME=
SET MSG=%DATE% %TIME% 店別B/M送信状況 INATK.TOKBMS LOAD処理
ECHO %MSG%
>> %OUTFILE% ECHO %MSG%
REM 削除
"%MYSQLPATH%mysql" %OPTION% -h %HOST% %DB_NAME% -u %USER_ID% --show-warnings -vv -e "DELETE FROM INATK.TOKBMS T1 WHERE EXISTS (SELECT 1 FROM INATK2.TOKBMS T2 WHERE T1.SMOYSCD = T2.SMOYSCD AND T1.SBMNO=T2.SBMNO);commit;" >>%OUTFILE% 2>&1
"%MYSQLPATH%mysql" %OPTION% -h %HOST% %DB_NAME% -u %USER_ID% --show-warnings -vv -e "INSERT IGNORE INTO INATK.TOKBMS (SELECT SMOYSCD, SBMNO, MOYSKBN, MOYSSTDT, MOYSRBAN, BMNO, 'BATCH' AS OPERATOR, CURRENT_TIMESTAMP AS ADDDT, CURRENT_TIMESTAMP AS UPDDT FROM INATK2.TOKBMS);commit;" >>%OUTFILE% 2>&1
IF NOT %ERRORLEVEL%==0 GOTO ERROR
"%MYSQLPATH%mysql" %OPTION% -h %HOST% %DB_NAME% -u %USER_ID% --show-warnings -vv -e "ANALYZE TABLE INATK.TOKBMS;" >>%OUTFILE% 2>&1
IF ERRORLEVEL 1 GOTO ERROR


:FINAL
EXIT /B 0

:ERROR
EXIT /B 1
