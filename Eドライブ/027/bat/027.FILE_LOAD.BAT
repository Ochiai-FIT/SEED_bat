REM [003][FILE_LOAD]
@ECHO OFF

REM ログフォルダ作成
IF NOT EXIST %~DP0..\logs MKDIR %~DP0..\logs

REM コマンドフォルダ作成
IF NOT EXIST %~DP0..\cmd MKDIR %~DP0..\cmd

REM ログファイルの情報
SET OUTFILE=%~DP0../logs/setup.log
SET OUTTIME=%~DP0../logs/time.log

REM ベースフォルダ
SET BASEDIR=%~DP0..

REM 更新対象の情報
SET INFOSCRIPT=%~DP0..\cmd\%~N0.DB2

rem INAIN.A11PACK_01へ取り込み ======================================================================
SET MSG=%DATE% %TIME% TRUNCATE INAIN.A11PACK_01
ECHO %MSG%
>> %OUTFILE% ECHO %MSG%
"%MYSQLPATH%mysql" %OPTION% -h %HOST% %DB_NAME% -u %USER_ID% --show-warnings -vv -e "TRUNCATE TABLE INAIN.A11PACK_01 ;COMMIT;">>%OUTFILE% 2>&1
IF NOT %ERRORLEVEL%==0 GOTO ERROR

rem ファイルパスの設定
SET INFILENAME=0068
set filename=DATA\%INFILENAME%
set filename_tmp=%filename:\=\\%

SET MSG=%DATE% %TIME%  →  INAIN.A11PACK_01 LOAD処理
ECHO %MSG%
ECHO %MSG% >> %OUTFILE%
"%MYSQLPATH%mysql" %OPTION% -h %HOST% %DB_NAME% -u %USER_ID% --local_infile=1 --show-warnings -vv -e "load data local infile '%filename_tmp%' IGNORE into table INAIN.A11PACK_01 character set cp932 fields terminated by ',' ESCAPED BY '' lines terminated by '\r\n' (@1) SET DATA = @1; commit;" >>%OUTFILE% 2>&1
rem IF NOT %ERRORLEVEL%==0 GOTO ERROR

rem INAIN.A11PACKへU登録 =========================================================================

SET MSG=%DATE% %TIME% TRUNCATE INAIN.A11PACK
ECHO %MSG%
>> %OUTFILE% ECHO %MSG%
"%MYSQLPATH%mysql" %OPTION% -h %HOST% %DB_NAME% -u %USER_ID% --show-warnings -vv -e "TRUNCATE TABLE INAIN.A11PACK ;COMMIT;">>%OUTFILE% 2>&1
IF NOT %ERRORLEVEL%==0 GOTO ERROR

SET MSG=%DATE% %TIME% %INFILENAME% → INAIN.A11PACK LOAD処理
ECHO %MSG%
>> %OUTFILE% ECHO %MSG%
"%MYSQLPATH%mysql" %OPTION% -h %HOST% %DB_NAME% -u %USER_ID% --show-warnings -vv -e "INSERT INTO INAIN.A11PACK SELECT MID(DATA, 1, 14) AS SHOHINCD, MID(DATA, 15, 19) AS AVGPTANKA FROM INAIN.A11PACK_01;COMMIT;" >>%OUTFILE% 2>&1
IF NOT %ERRORLEVEL%==0 GOTO ERROR


SET MSG=%DATE% %TIME% INAIN.A11PACK INAMS.MSTAVGPTANKA MERGE処理
ECHO %MSG%
>> %OUTFILE% ECHO %MSG%
"%MYSQLPATH%mysql" %OPTION% -h %HOST% %DB_NAME% -u %USER_ID% --show-warnings -vv -e "INSERT INTO INAMS.MSTAVGPTANKA(SHNCD, AVGPTANKAAM, SENDFLG, OPERATOR, ADDDT, UPDDT) SELECT * FROM (SELECT SHOHINCD AS SHNCD, AVGPTANKA AS AVGPTANKAAM, 0 AS SENDFLG, 'batch' AS OPERATOR, CURRENT_TIMESTAMP AS ADDDT, CURRENT_TIMESTAMP AS UPDDT FROM INAIN.A11PACK T1) MT ON DUPLICATE KEY UPDATE AVGPTANKAAM = MT.AVGPTANKAAM, SENDFLG = 0, OPERATOR = 'batch', UPDDT = CURRENT_TIMESTAMP;COMMIT;" >>%OUTFILE% 2>&1

:FINAL
EXIT /B 0

:ERROR
EXIT /B 1
